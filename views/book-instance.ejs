<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <!-- bootstrap link  -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>
    
   <div class="container-fluid">
      <div class="row ">
        <!-- nav -->
        <%- include("./partial/nav") -%>
    
        <main class="col-lg-10">

          <!-- Dynamicly add page title  -->
          <%if(typeof title !== "undefined"){%>
                <div>
                  <h1><%= title %></h1>
                </div>
            <%} 
          %>

          <!-- Display book instance in an unorder list  -->
          <%if(typeof book_instances !== "undefined"){%>
                
              <!-- loop through list of book instances and display each to DOM  -->
              <ul>
                <% book_instances.forEach((book_instance)=>{ %>
                  <li>
                    <a href="/catalog/bookinstance/<%= book_instance.id %>"><%= book_instance.title %></a>
                  </li>
                <% }); %>
              
              </ul>
              <!-- loop ends  -->

            <%} 
          %>

        </main>
      </div>
   </div>
  </body>
</html>
