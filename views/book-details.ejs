<!DOCTYPE html>
<html>
  <head>
    <title>Library</title>
    <!-- bootstrap link  -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>
    
   <div class="container-fluid">
      <div class="row ">
        <!-- nav -->
        <%- include("./partial/nav") -%>
    
        <main class="col-lg-10">

          <!-- Book Details  -->
           <div>
            <h1>Book Title:</h1>
            <p>
              <strong>Author:</strong>
            </p>
            <p>
              <strong>Summary:</strong>
            </p>
            <p>
              <strong>ISBN:</strong>
            </p>
            <p>
              <strong>Genre:</strong>
            </p>
           </div>

           <hr>

           <!-- Copies  -->
           <h4><strong>Copies & Categories</strong></h4>

           <!-- Avaliable copies  -->
           <div>
             <p class="text-success"><strong>Avaliable Copies</strong></p>
             <p>Imprints</p>
             <p>Id</p>
           </div>

           <hr>

           <!-- Loaned copies  -->
           <div>
            <p class="text-warning"><strong>Loaned</strong></p>
            <p>Imprints</p>
            <p>Id</p>
          </div>

          <hr>

          <!-- Loaned copies  -->
          <div>
            <p class="text-danger"><strong>Maintenance</strong></p>
            <p>Imprints</p>
            <p>Id</p>
          </div>


          <hr>

           <!-- call to action buttons  -->
           <button type="button" class="btn btn-primary">Update Book</button>
           <button type="button" class="btn btn-danger">Delete Book</button>
           

          
        </main>
      </div>
   </div>
  </body>
</html>
