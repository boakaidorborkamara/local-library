<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <!-- bootstrap link  -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>
    
   <div class="container-fluid">
      <div class="row ">
        <!-- nav -->
        <%- include("./partial/nav") -%>
    
        <main class="col-lg-10">
          <div>
            <h1>Add Book</h1>
          </div>
          

          <form action="">
            <!-- title  -->
            <div class="mb-3">
              <label for="title" class="form-label">Title:</label>
              <input type="text" class="form-control" id="title" placeholder="Name of book">
            </div>

            <!-- author  -->
            <div class="mb-3">
              <label for="author" class="form-label">Author:</label>
              <select class="form-select form-select-lg mb-3 w-100 p-2" aria-label=".form-select-lg example">
                <option selected disabled>Choose author</option>
                <option value="1">Author One</option>
                <option value="2">Author Two</option>
                <option value="3">Author Three</option>
              </select>
            </div>
            
            
            <!-- summary  -->
            <div class="mb-3">
              <div>
                <label for="summary" class="form-label">Summary:</label>
              </div>
              <textarea class="w-100" name="" id="sumary" cols="30" rows="10" placeholder="summary"></textarea>
            </div>

            <!-- isbn  -->
            <div class="mb-3">
              <label for="isbn" class="form-label">ISBN:</label>
              <input type="text" class="form-control" id="isbn" placeholder="ISBN">
            </div>

            <!-- genre  -->
            <div class="mb-3">
              <label for="genre" class="form-label">Genre:</label>
              <div>
                <input type="checkbox" id="fantasy" name="vehicle1" value="Bike">
                <label for="fantasy" class="mr-3">Fantasy</label>

                <input type="checkbox" id="french-poetry" name="vehicle1" value="Bike">
                <label for="french-poetry">French Poetry</label>
              </div>
            </div>

            <button type="button" class="btn btn-primary">Submit</button>
          </form>



        </main>
      </div>
   </div>
  </body>
</html>
